{
  "name": "tunemap",
  "version": "0.1.2",
  "scripts": {
    "test": "ava --verbose",
    "test:watch": "npm run test -- -w",
    "clean": "rm -rf ./dist && mkdir dist",
    "copy:files": "rsync -avz src/ dist/ --exclude '*.js' --exclude '.*' --exclude 'lib' --exclude 'styles'",
    "copy:license": "cp LICENSE dist/",
    "copy": "npm run copy:files & npm run copy:license",
    "build:css": "stylus --compress src/styles/main.styl -o dist/tunemap.css",
    "build:js": "browserify src/main.js -t [ babelify ] | uglifyjs --compress --mangle -o dist/tunemap.js",
    "build": "npm run clean && npm run copy & npm run build:css & npm run build:js",
    "watch": "watch 'npm run build' ./src"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://mallendeo@bitbucket.org/mallendeo/youtify.git"
  },
  "author": "@mallendeo",
  "devDependencies": {
    "ava": "^0.15.2",
    "browserify": "^13.0.1",
    "eslint": "^2.13.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "stylus": "^0.54.5",
    "uglify-js": "^2.6.3",
    "watch": "^0.19.1"
  }
}
