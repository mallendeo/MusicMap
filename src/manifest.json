{
  "manifest_version": 2,
  "name": "Youtify",
  "version": "0.0.6",
  "description": "Open the current YouTube song in Spotify",
  "author": "mallendeo",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/**",
        "*://open.spotify.com/**"
      ],
      "js": ["inject.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "permissions": [
    "*://*.youtube.com/**",
    "*://open.spotify.com/**"
  ],
  "web_accessible_resources": [
    "youtify.js",
    "youtify.css"
  ]
}
